{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": false,
        "strict": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "target": "es5",
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ],
        "types": [
            "@mapbox/polylabel",
            "@mapbox/unitbezier",
            "earcut",
            "falcor",
            "falcor-http-datasource",
            "jasmine",
            "latlon-geohash",
            "node",
            "pbf",
            "rbush",
            "three",
            "virtual-dom",
            "when"
        ]
    },
    "include": [
        "./src/**/*.ts"
    ]
}
